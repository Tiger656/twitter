{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"] 
    },
    "start": {
      "dependsOn": ["^start"],
      "outputs": [] 
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": []
    },
    "lint": {},
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    }
  }
}

