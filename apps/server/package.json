{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:doppler": "yarn doppler nest start",
    "dev:doppler": "APP_ENV=local yarn doppler nest start --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:doppler": "APP_ENV=test yarn doppler jest -c jest.config.ts",
    "doppler": "doppler -p app_twitter_monorepo -c ${APP_ENV} run -- ",
    "env:local:up": "APP_ENV=local yarn doppler docker compose up -d",
    "env:local:down": "APP_ENV=local yarn doppler docker compose down ",
    "env:test:up": "APP_ENV=test yarn doppler docker compose up -d",
    "env:test:down": "APP_ENV=test yarn doppler docker compose down"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.2",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/mapped-types": "^1.2.2",
    "@nestjs/mongoose": "^9.2.2",
    "@nestjs/platform-express": "^9.4.2",
    "@nestjs/swagger": "^6.3.0",
    "bcrypt": "^5.1.0",
    "mongoose": "^7.2.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "zod": "^3.21.4",
    "config": "*"
  },
  "devDependencies": {},
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}